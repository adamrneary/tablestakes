    link(href='libs/css/nv.d3.css', rel='stylesheet', type='text/css')
    link(href='libs/css/rainbow-theme.css', rel='stylesheet', type='text/css')
    style
      .icon-white {background-image: url("libs/img/glyphicons-halflings-white.png")}
    //
       vendor javascripts 
    script(type='text/javascript', src='libs/jquery-1.8.0.js')
    script(type='text/javascript', src='libs/underscore.js')
    script(type='text/javascript', src='libs/backbone.js')
    script(type='text/javascript', src='libs/d3.v2.js')
    script(type='text/javascript', src='libs/rainbow-custom.min.js')
