!!! 5
html
  head
    include includes/head
    style
      body {
        overflow-y:scroll;
      }
      .err, hr, .total {
        float: left;
      }
      hr {
        width: 100%;
        margin: 10px 0;
      }
      .err div {
        float: left;
      }
      .err .line {
        margin-right: 10px;
        width: 60px;
        color: red;
      }
      .err .line:before {
        content: 'Line # '
      }
      .err .message {
        margin-right: 10px;
      }
      .file {
        font-weight: bold;
        float: left;
        font-size: larger;
        margin-bottom: 5px;
      }
      .file span {
        color: red;
        font-weight: normal;
      }
      .total {
        margin: 5px 0 20px 0;
        padding: 5px 0;
        border-top: 1px solid #bababa;
        border-bottom: 1px solid #bababa;
        width: 100%;
      }
      .total .cnt {
        font-weight: bold;
        font-size: larger;
      }
      .errorless {
        color: green;
        font-weight: bold;
        font-size: 20px;
        float: left;
      }
  body
    include includes/toppanel
    .container
      .row
        .span12
          h3 Lint
          - var cnt_err = 0
          each error, file in errors
            - cnt_err += error.length
            .file File: 
              span= file
            .error
              - var err_cnt = 0, warn_cnt = 0
              each err in error
                if err.level == 'error'
                  - err_cnt += 1
                else if err.level == 'warning'
                  - warn_cnt += 1
                .err.span12
                  .line= err.lineNumber
                  .message #{err.message}.
                  .context= err.context
              .total 
                |Total 
                span.cnt= err_cnt
                |  errors and 
                span.cnt= warn_cnt 
                |  warnings
          if cnt_err == 0
            .errorless It's ok